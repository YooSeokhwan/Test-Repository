<mvc:View controllerName="project1.controller.Request"
            xmlns="sap.m"
            xmlns:f="sap.f"
            xmlns:t="sap.ui.table"
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:form="sap.ui.layout.form"
            xmlns:layout="sap.ui.layout"
            xmlns:core="sap.ui.core"
            height="100%">
    <f:DynamicPage id="RequestPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Title text= "물품 요청 목록" />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox>
                            <Label text="요청 번호 : "/>    
                            <Input id="ReqNum"/>
                            <layoutData>
                                <layout:GridData spanXL="2" spanL="2" spanM="6" spanS="12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content class="sapUiSmallMargin">
            <t:Table 
                    id="RequestTable"                    
                    rows="{Request>/RequestOrder}"
                    selectionMode="MultiToggle"
                    width="auto">
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="요청 번호" />
                        <t:template>
                            <Text text="{Request>ReqNum}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="요청 물품" />
                        <t:template>
                            <Text text="{Request>ReqGood}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="물품 개수" />
                        <t:template>
                            <Text text="{Request>ReqQty}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="요청자" />
                        <t:template>
                            <Text text="{Request>Requester}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="요청 일자" />
                        <t:template>
                            <Text text="{Request>ReqDate}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="처리 상태" />
                        <t:template>
                            <ObjectStatus text= "{
                                path: 'Request>ReqStatus',
                                formatter: '.formatter.statusText'
                                }"
                                state = "{= ${Request>ReqStatus} === 'A' ? 'Success' :
                                            ${Request>ReqStatus} === 'C' ? 'Error' :
                                            'None'
                                }" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>