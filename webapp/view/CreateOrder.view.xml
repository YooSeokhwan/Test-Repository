<mvc:View
    controllerName="project1.controller.CreateOrder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
    
    <f:DynamicPage id="page" headerExpanded="false" showFooter="true" toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Title text="물품 요청 생성" />
                    </HBox>
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm layout="ResponsiveGridLayout">
                        <form:content>

                            <VBox>
                                <Label text="요청 번호" />
                                <Text id="ReqNum" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="요청 일자" />
                                <Text id="ReqDate" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="요청 물품" />
                                <Input id="ReqGood" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="물품 개수" />
                                <Input id="ReqQty" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="요청자" />
                                <Input id="Requester" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="예상 가격" />
                                <Input id="ReqPrice" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="요청 사유" />
                                <Input id="ReqReason" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </VBox>

                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
    </f:DynamicPage>
</mvc:View>
